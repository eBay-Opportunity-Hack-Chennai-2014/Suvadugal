<style>
  .navbar-default {
  padding: 0px 0;
  border: 0;
}
</style>
<div class="row">
  <div class="col-lg-12">
    <div class="col-sm-4">

      <a href="#" class="btn btn-lg btn-success" data-toggle="modal" data-target="#basicModal">Create Event</a>
      <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
       <div class="modal-dialog model-lg">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title" id="myModalLabel">New Event</h4>
            </div>
            <div class="modal-body">
               <form id="myForm" method="post">
          <div class="form-group">
  <div class="row">
  <div class="col-md-8">
    <label for="eventName">Event Name</label>
     <input type="text" class="form-control" id="eventName" placeholder="Event Name"/>
     </div>
     </div>
  </div>

  <div class="form-group">
  <div class="row">
  <div class="col-md-8">
    <label for="eventLocation">Event Location</label>
     <input type="text" class="form-control" id="eventLocation" placeholder="Event Location"/>
     </div>
     </div>
  </div>

  <div class="form-group">
  <div class="row">
  <div class="col-md-8">
    <label for="eventDate">Date of Event</label><br>
     <input class="datepicker" data-date-format="dd/mm/yyyy" data-val="true" data-val-date="The field Date must be a date." data-val-required="The Date field is required." id="eventDate" name="eventDate" type="text">
     </div>

     </div>
  </div>


  <div class="form-group">
  <div class="row">
  <div class="col-sm-8">
    <label for="about">About the Event Briefly</label><br>
     <textarea class="field span12" id="textarea" rows="6" cols="66" placeholder="Enter a short synopsis"></textarea>
     </div>
     </div>
  </div>
<div class="form-group">
  <div class="row">
   <div class="col-sm-10">
    <label for="mobileNo">Mobile Number</label>
     <input type="text" class="form-control" id="mobileNo" placeholder="Enter Mobile Number"/>
     </div>
     </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
    </form>

            </div>

    </div>
  </div>
 </div>
</div>

    <div class="col-sm-8 text-right">

    <input id="product_search" type="text" data-provide="typeahead" placeholder="Search Event">
    <button id="product_search" type="button" class="btn btn-success ">Search</button>


    </div>
</div>

<div>
<table class="table" style="margin-top:40px">
<thead>
<th>Planned Events</th>
</thead>
<tbody>
 <tr>
